<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Yum Kaax</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" type="text/css" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @Styles.Render("/bundles/chosen")
    <link href="~/Content/bootstrap-chosen.css" rel="stylesheet" />
</head>
<body>
    <div class="sidebar">
        <div class="logo_content">
            <div class="logo">
                <img src="~/Images/yumkaax2.png" height="100" />

            </div>
            <a id="btn"><span class="fa fa-bars"></span> </a>
        </div>
        <ul class="nav_list">
            <li>
                <a class="nav-link active " aria-current="page" href="@Url.Action("Index", "Home")"><span class="fa fa-dashboard"></span> <span class="links_name">Inicio</span></a>
                <span class="tooltip">Inicio</span>
            </li>
            <li>
                <a class="nav-link " href="@Url.Action("CrearSolicitud","Solicitudes")" tabindex="-1" aria-disabled="true"><span class="fa fa-newspaper-o"></span> <span class="links_name"> Crear solicitud</span></a>
                <span class="tooltip" data-container="body">Nueva Solicitud</span>
            </li>
            <li>
                <a class="nav-link " href="@Url.Action("CrearSolicitud","Solicitudes")" tabindex="-1" aria-disabled="true"><span class="fa fa-dollar"></span> <span class="links_name"> Nueva oferta</span></a>
                <span class="tooltip">Ofertar</span>
            </li>
            <li>
                <a class="nav-link " href="@Url.Action("CrearSolicitud","Solicitudes")" tabindex="-1" aria-disabled="true"><span class="fa fa-lemon-o"></span><span class="links_name"> Productos</span></a>
                <span class="tooltip">Productos</span>
            </li>
            <li>
                <a class="nav-link " href="@Url.Action("CrearSolicitud","Solicitudes")" tabindex="-1" aria-disabled="true"><span class="fa fa-coffee"></span><span class="links_name"> Cerámica</span></a>
                <span class="tooltip">Cerámica</span>
            </li>
            @if (Session["IdUsuario"] != null)
            {

                <li>
                    <a class="btn btn-success" href="@Url.Action("Perfil", "Perfil")"><span class="fa fa-user-circle"></span><span class="links_name">  &nbsp; Mi Perfil</span> </a>
                    <span class="tooltip">Mi perfil</span>
                </li>
                <li>
                    <a class="btn btn-success" href="@Url.Action("LogOut", "Login")"><span class="fa fa-sign-out" id=""><span class="links_name"> Salir</span> </span> </a>
                    <span class="tooltip">Salir</span>
                </li>
            }
            else
            {
                <li>
                    <a class="btn btn-outline-success" href="@Url.Action("Registro", "Registro")" style="margin-right:4px;"><span class="fa fa-user-plus"></span><span class="links_name"> Registrate</span></a>
                    <span class="tooltip">Registrate</span>
                </li>
                <li>
                    <a class="btn btn-outline-success" href="@Url.Action("Index", "Login")"><span class="fa fa-sign-in"></span><span class="links_name"> Ingresar</span></a>
                    <span class="tooltip">Login</span>
                </li>

            }
        </ul>
        @if (Session["IdUsuario"] != null)
        {
            <div class="profile_content">
                <div class="profile">
                    <div class="profile_details">
                        <div class="name_job">
                            <div class="name">@Session["NickUsuario"].ToString() </div>
                            <div class="job"> @Session["TipoUser"].ToString()</div>
                        </div>
                    </div>
                </div>

            </div>
        }
    </div>
    <div class="home_content">
        <div class="w-100">
            <br />
        </div>
        @RenderBody()
        <hr />
        <div id="div2">

        </div>
    </div>
    @*<footer class="mt-auto footer-bl">
            <ul class="nav justify-content-center border-bottom pb-3 mb-3 list-footer">
                <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Home</a></li>
                <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Features</a></li>
                <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Pricing</a></li>
                <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">FAQs</a></li>
                <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">About</a></li>
            </ul>
            <div class="d-flex justify-content-center">
                <p>&copy; @DateTime.Now.Year - By Quetzalcoatl Technologies</p>
            </div>

        </footer>*@
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>

    @Scripts.Render("~/bundles/chosen")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/chosen.jquery.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>
    <script>
        let btn = document.querySelector("#btn");
        let sidebar = document.querySelector(".sidebar");
        btn.onclick = function () {
            sidebar.classList.toggle("active");
        }
    </script>
</body>

</html>
